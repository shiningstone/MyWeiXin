<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:local="http://schemas.android.com/apk/res/com.shiningstone.myweixin"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eee"
        android:orientation="vertical" >
        
        <LinearLayout style="@style/title_bar_pure" >
            <TextView style="@style/title_text" android:text="@string/tab3"/> 
		</LinearLayout>

        <com.shiningstone.myweixin.ControlOption                         
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_single_item"
            local:Img="@drawable/find_more_friend_addfriend_icon"
            local:Text="添加朋友" 
            local:Mode="Single">
        </com.shiningstone.myweixin.ControlOption>

        <com.shiningstone.myweixin.ControlOption                         
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_single_item"
            local:Img="@drawable/find_more_friend_shake"
            local:Text="摇一摇" 
            local:Mode="Single">
        </com.shiningstone.myweixin.ControlOption>
        
    </LinearLayout>
