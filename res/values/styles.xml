<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AnimFade" parent="@android:style/Animation.Activity">  
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>  
        <item name="android:activityOpenExitAnimation">@anim/hold</item>        
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>  
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item> 
    </style>
    
    <style name="Anim_style2" parent="android:Theme.NoTitleBar">         
        <item name="android:windowAnimationStyle">@style/AnimFade</item>       
    </style> 
    
    <!-- Title style. -->
    <style name="title_bar">
        <item name="android:layout_height">45dp</item>       
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/title_bar</item>
    </style>
    
    <style name="title_bar_pure" parent="@style/title_bar">
        <item name="android:gravity">center_vertical|center_horizontal</item>       
    </style>

    <style name="title_bar_with_button" parent="@style/title_bar">
        <item name="android:gravity">center_vertical</item>       
    </style>

    <style name="title_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">wrap_content</item>       
        <item name="android:layout_height">wrap_content</item>       
        <item name="android:layout_centerInParent">true</item>       
    </style>
    
    <style name="title_button">
        <item name="android:layout_width">67dp</item>       
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_height">wrap_content</item>       
        <item name="android:layout_alignParentRight">true</item>       
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/title_btn_right</item>
    </style>
    
</resources>
